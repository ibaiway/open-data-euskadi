---

interface Props {
	title: string
	description: string
    image?: string

}

const {
	title,
	description,
	image = "",
} = Astro.props as Props

---

<title>{title}</title>

<meta charset="UTF-8" />
<meta name="description" content={description} />

<link
	rel="preload"
	href={"https://www.opendataeuskadi.com/fonts/Urkiola.ttf"}
	as="font"
	type="font/woff2"
	crossorigin
/>

<meta name="viewport" content="width=device-width" />

<meta name="keywords" content="opendata, euskadi, gobierno, vasco" />

<meta name="twitter:card" content="summary_large_image" />
<!--  <meta name="twitter:site" content="@" /> -->
<meta name="twitter:creator" content="@alberdiibai" />
<meta name="twitter:title" content={title} />
<meta name="twitter:description" content={description} />
<!--  <meta name="twitter:image" content={new URL(image, Astro.url)} /> -->

<!--  <meta property="og:image" content={new URL(image, Astro.url)} /> -->
<meta property="og:title" content={title} />
<meta property="og:description" content={description} />
<meta property="og:url" content={Astro.url} />
<meta property="og:site_name" content="Open Data Euskadi" />
<meta property="og:type" content="website" />
<meta property="og:locale" content="es_ES" />

<meta name="robots" content="index, follow" />
<meta name="googlebot" content="index, follow" />


<!-- might change to svg in the future -->
<link rel="icon" type="image/ico" href="/favicon.ico" />

